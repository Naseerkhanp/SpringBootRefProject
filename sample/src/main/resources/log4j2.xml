<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
	<Properties>
		<Property name="LOG_PATTERN">%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} %-5p %c{10}:%M:%L - %X{dd.trace_id} - %X{dd.span_id} | %X{trackId}- %msg%n
		</Property>
		<Property name="LOG_PATTERN_CONSOLE">%style{%d{ISO8601}}{black}%highlight{%-5level} %style{%C{1.}}{bright,yellow}: - %X{dd.trace_id} %X{dd.span_id} | %X{trackId}- %msg%n
		</Property>
	</Properties>
	 <Appenders>
		<Console name="Console" target="SYSTEM_OUT" follow="true">
			<PatternLayout
				pattern="%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} %-5p %c{10}:%M:%L - %X{dd.trace_id} - %X{dd.span_id} | %X{trackId}- %msg%n" />
						
		</Console>
	</Appenders>

	<!-- <Loggers>
	<AsyncLogger name="com.excelacom.century.apolloneoutbound" level="info" additivity="false">
        <AppenderRef ref="Console" />
    </AsyncLogger>
		<AsyncRoot level="info">
		    <AppenderRef ref="Console" />
		</AsyncRoot>
	</Loggers> -->
	<Loggers>
		<Logger name="com.excelacom.century.apolloneoutbound" level="info" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="org.springframework" level="info" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="com.zaxxer.hikari" level="info" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<Root level="info">
			<AppenderRef ref="Console" />
		</Root>
	</Loggers>
</Configuration>